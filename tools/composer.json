{
  "require": {
    "overtrue/phplint": "^2.3",
    "phpstan/phpstan": "^0.12.88",
    "friendsofphp/php-cs-fixer": "^3.0",
    "brainmaestro/composer-git-hooks": "^2.8"
  },
  "extra": {
    "hooks": {
      "config": {
        "stop-on-failure": [
          "pre-commit",
          "pre-push"
        ]
      },
      "pre-commit": [
        "composer test-cs",
        "composer lint",
        "composer analyze"
      ],
      "pre-push": [
        "composer test-cs",
        "composer lint",
        "composer analyze"
      ]
    }
  }
}
