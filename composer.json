{
    "name": "edge-box/sync-core",
    "type": "library",
    "description": "The Sync Core PHP library.",
    "homepage": "https://www.cms-content-sync.io/",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Thiemo MÃ¼ller",
            "email": "thiemo@edge-box.com"
        },
        {
            "name": "Sebastian Gurlt",
            "email": "sebastian@edge-box.com"
        }
    ],
    "support": {
        "forum": "https://www.drupal.org/project/issues/cms_content_sync",
        "slack": "https://drupal.slack.com/archives/CKN24APFC"
    },
    "scripts": {
        "lint": "./vendor/bin/phplint ./ --exclude=vendor --warning",
        "analyze": "./vendor/bin/phpstan analyse src",
        "test-cs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix --dry-run",
        "fix-cs": "tools/php-cs-fixer/vendor/bin/php-cs-fixer fix",
        "cghooks": "vendor/bin/cghooks",
        "post-install-cmd": "cghooks add --ignore-lock",
        "post-update-cmd": "cghooks update"
    },
    "require": {
        "php": ">=7.1.3",
        "guzzlehttp/guzzle": "^7.3",
        "firebase/php-jwt": "^5.2",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "EdgeBox\\SyncCore\\": "src/"
        }
    },
    "require-dev": {
        "overtrue/phplint": "^2.3",
        "phpstan/phpstan": "^0.12.88",
        "brainmaestro/composer-git-hooks": "^2.8"
    },
    "extra": {
        "hooks": {
            "config": {
                "stop-on-failure": ["pre-commit", "pre-push"]
            },
            "pre-commit": [
                "composer test-cs",
                "composer lint",
                "composer analyze"
            ],
            "pre-push": [
                "composer test-cs",
                "composer lint",
                "composer analyze"
            ]
        }
    }
}
